{
    "name": "jasmine",
    "module": "src/main.ts",
    "type": "module",
    "private": true,
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
    },
    "scripts": {
        "compile:binaryen": "bun src/main.ts main.jas --backend binaryen",
        "run:binaryen": "cd build/wasm && wasmtime a.wasm",
        "binaryen": "bun compile:binaryen && bun run:binaryen",
        "compile:qbe": "bun src/main.ts main.jas --backend qbe",
        "run:qbe": "cd build/qbe && ./a.out",
        "qbe": "bun compile:qbe && bun run:qbe",
        "il": "cd build/qbe && qbe -o out.s il.ssa && cc out.s && ./a.out"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "binaryen": "^123.0.0"
    }
}
